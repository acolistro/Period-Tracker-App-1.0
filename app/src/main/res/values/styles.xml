<resources>
    <!-- Base application theme. -->
    <style name="AppThemeSetting" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppThemeNote" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="homeAsUpIndicator">@mipmap/ic_home</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorPink2</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@mipmap/ic_home</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="homeAsUpIndicator">@mipmap/ic_home</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppThemeLegenda" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SCBSwitch">
        <item name="android:colorForeground">#221f1f</item>
        <item name="colorControlActivated">#1fb8be</item>
        <item name="colorSwitchThumbNormal">#000000</item>
    </style>

    <style name="RadioCheckBox">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="RadioCheckBox2">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="PeriodCheckBox">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="MineCustomTabText">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomRatingCuoreVerde">
        <item name="android:maxHeight">36dp</item>
        <item name="android:progressDrawable">@drawable/ratingbar_cuore_verde_selector</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="FragmentNoteCheckBoxTheme">
        <item name="colorControlNormal">@color/colorPink1</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="NoteSwitch">
        <item name="android:colorForeground">#221f1f</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
    </style>


</resources>